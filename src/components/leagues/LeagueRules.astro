---
import RuleWeeklyDues from './rules/RuleWeeklyDues.astro';
import RuleSanctionFee from './rules/RuleSanctionFee.astro';
import RuleGameCosts from './rules/RuleGameCosts.astro';
import RuleLoserBuys from './rules/RuleLoserBuys.astro';
import RuleHomeTeamPerk from './rules/RuleHomeTeamPerk.astro';
import RulePlayoffs from './rules/RulePlayoffs.astro';
---

<div class="bg-white text-gray-800 shadow-lg rounded-lg p-6 border border-blue-400 hover:shadow-xl transition-shadow duration-300">
  <div class="flex items-center mb-3">
    <div class="text-blue-500 w-8 h-8 mr-2">
      <!-- Placeholder for icon (e.g., rule book or gavel icon) -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
    </div>
    <h3 class="text-2xl md:text-3xl font-semibold text-blue-600">Rules & Expectations</h3>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <RuleWeeklyDues />
    <RuleSanctionFee />
    <RuleGameCosts />
    <RuleLoserBuys />
    <RuleHomeTeamPerk />
    <RulePlayoffs />
  </div>
</div>
