---
import LeagueDetails from './leagues/LeagueDetails.astro';
import LeagueLocations from './leagues/LeagueLocations.astro';
import LeagueRules from './leagues/LeagueRules.astro';
import LeaguePayouts from './leagues/LeaguePayouts.astro';
import LeagueTournaments from './leagues/LeagueTournaments.astro';
import LeagueInfo from './leagues/LeagueInfo.astro';
---

<section id="leagues" class="bg-blue-500 text-white py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold mb-4 text-center">The Lone Star Vendors Pool League</h2>
    <p class="text-xl mb-6 text-center"><strong>VNEA Sanctioned</strong> - Join us for competitive 8-ball pool every Tuesday night at 7:00 PM.</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
      <LeagueDetails />
      <LeagueLocations />
    </div>
    
    <div class="bg-blue-50 py-8 px-4 rounded-lg mb-10">
      <LeagueRules />
    </div>
    
    <div class="space-y-10">
      <LeaguePayouts />
      <LeagueTournaments />
      <LeagueInfo />
    </div>
    
    <!-- Placeholder for VNEA Logo or related imagery -->
    <div class="mt-10 text-center">
      <div class="bg-gray-200 h-48 flex items-center justify-center rounded-md">
        <p class="text-gray-500">Placeholder for VNEA Logo or Pool League Imagery</p>
      </div>
    </div>
    
    <!-- Notes for human to do: -->
    <!-- - MAKE SIGN UP SHEETS -->
    <!-- - Get the logo VNEA Sanctioned -->
  </div>
</section>
